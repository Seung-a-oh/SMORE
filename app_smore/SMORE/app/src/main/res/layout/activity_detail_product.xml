<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="792dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="smore"
                        android:textColor="#292929"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F3EDE3"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/Corporation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="mamaforest / 제품"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.521" />

                    <Button
                        android:id="@+id/testbutton"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gmarketmedium"
                        android:textColor="#000000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="370dp">

                    <ImageView
                        android:id="@+id/ProductPhoto"
                        android:layout_width="199dp"
                        android:layout_height="218dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/mama_prodect" />

                    <TextView
                        android:id="@+id/ProductName"
                        android:layout_width="364dp"
                        android:layout_height="42dp"
                        android:layout_marginBottom="72dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="내추럴 디쉬바 엔젤베이비 - 영유아식기전용 천연주방세제"
                        android:textColor="#676060"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.862"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/Shipment"
                        android:layout_width="339dp"
                        android:layout_height="18dp"
                        android:layout_marginBottom="27dp"
                        android:fontFamily="@font/gmarketlight"
                        android:text="배송비: 3,000원 (40,000원 이상 구매 시 무료)"
                        android:textColor="#676060"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.466"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/ShipPeriod"
                        android:layout_width="337dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="@font/gmarketlight"
                        android:text="배송 기간 : 주문 후 배송완료까지 1일 ~ 3일(영업일 기준) 소요"
                        android:textColor="#676060"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.451"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/ProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="55dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="10,500"
                        android:textColor="#676060"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="#F6F4F0">

                    <TextView
                        android:id="@+id/ProductNumMent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="제품 수량"
                        android:textColor="#8E8780"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.155" />

                    <ImageButton
                        android:id="@+id/PlusButton"
                        android:layout_width="57dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/plus_button" />

                    <ImageButton
                        android:id="@+id/MinusButton"
                        android:layout_width="53dp"
                        android:layout_height="66dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="124dp"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/minus_button" />

                    <TextView
                        android:id="@+id/ProductNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="90dp"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="1"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.252" />

                    <Button
                        android:id="@+id/Pocket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="장바구니"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/BuyNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="65dp"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="바로 구매"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F3EDE3">

                    <Button
                        android:id="@+id/DetailPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="상세 정보"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/ReviewButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="220dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/gmarketmedium"
                        android:text="리뷰"
                        android:textColor="#676767"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="5500dp">

                    <ImageView
                        android:id="@+id/detail1"
                        android:layout_width="361dp"
                        android:layout_height="1000dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/mamaforest_detailcut1" />

                    <ImageView
                        android:id="@+id/detail2"
                        android:layout_width="361dp"
                        android:layout_height="600dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.567"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail1"
                        app:srcCompat="@drawable/mamaforest_detailcut2" />

                    <ImageView
                        android:id="@+id/detail3"
                        android:layout_width="361dp"
                        android:layout_height="1800dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.513"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail2"
                        app:srcCompat="@drawable/mamaforest_detailcut3" />

                    <ImageView
                        android:id="@+id/detail4"
                        android:layout_width="361dp"
                        android:layout_height="2000dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.567"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/detail3"
                        app:srcCompat="@drawable/mamaforest_detailcut4" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/bar"/>

    </LinearLayout>

</LinearLayout>